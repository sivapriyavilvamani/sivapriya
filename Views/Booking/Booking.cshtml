@model IEnumerable<DhanmayaAirlines.Models.FlightInfoClass>

@{
    ViewBag.Title = "Bookinginfo";
}
@{
    //var data = (IEnumerable<DhanmayaAirlines.Models.FlightInfoClass>)ViewData["Message"];
}
<div>
    @*<asp-controller="Book" asp-action="BookTicket" >Book</a>*@
    <table class=" table">
        <thead>
            <tr>
                @*<th>@Html.DisplayNameFor(Model => Model.FlightName)</th>
                <th>@Html.DisplayNameFor(Model => Model.AirlinesName)</th>
                <th>@Html.DisplayNameFor(Model => Model.Source)</th>
                <th>@Html.DisplayNameFor(Model => Model.Arrival)</th>*@
                <th>FlightID</th>
                <th>Source</th>
                <th>Destination</th>
                <th>Arrival</th>
                <th>Departure</th>
                <th>SeatType</th>
                <th>cost</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var flight in Model)
            {
                <tr>
                    <td>@flight.FlightId</td>
                    <td>@flight.Source</td>
                    <td>@flight.Destination</td>
                    <td>@flight.Arrival</td>
                    <td>@flight.Departure</td>
                    <td>@flight.SeatType</td>
                    <td>@flight.Status</td>
                    <td>@flight.cost</td>
                    <td>
                        <a asp-controller="Booking"
                       asp-action="BookTicket"
                       asp-route-id=@flight.FlightId>
                            Book Now
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>


